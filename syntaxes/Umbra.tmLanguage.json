{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Umbra Language",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.Umbra",
					"match": "\\b(not|and|else|def|for|if|null|or|stdout|stderr|return|this|true|false|const|mut|break|pub|import|any)\\b"
				},
				{
					"name": "support.type.Umbra",
					"match": "\\b(str|arr|hashmap|num)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.Umbra",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.Umbra",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.Umbra",
			"match": "\\b\\d+(\\.\\d+)?\\b"
		},
		"comments": {
			"name": "comment.line.number-sign",
			"begin": "#",
			"end": "$"
		},
		"operators": {
			"patterns": [
				{
					"match": "(\\+|\\-|\\*|\\/|==|!=|<|>|<=|>=|&&|\\|\\||::|:|\\.\\.\\.|~)",
					"name": "keyword.operator.Umbra"
				},
				{
					"match": "(=)",
					"name": "keyword.control.assignment.Umbra"
				}
			]
		}
	},
	"scopeName": "source.umbra"
}
